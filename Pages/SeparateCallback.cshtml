@page
@model CIS2Auth.Pages.SeparateCallbackModel
@{
	ViewData["Title"] = "Combined Callback page";
}
<h2 class="text-info">CIS2 Separate Callback</h2>
<h5 class="text-info">
	<span style="white-space: pre-line">@Model.HelperText</span>
</h5>

<div class="border container" style="padding: 30px;">
	<form method="post">
		
		<div class="form-group row">
			<div class="col-3">
				<label asp-for="CallbackData.Code"></label>
			</div>
			<div class="col-9">
				<input asp-for="CallbackData.Code" class="form-control"/>
			</div>
			<span asp-validation-for="CallbackData.Code" class="text-danger"></span>
		</div>

		<div class="form-group row">
			<div class="col-3">
				<label asp-for="CallbackData.State"></label>
			</div>
			<div class="col-9">
				<input asp-for="CallbackData.State" class="form-control"/>
			</div>
			<span asp-validation-for="CallbackData.State" class="text-danger"></span>
		</div>
		<div class="form-group row">
			<div class="col-3">
				<label asp-for="JWT"><p>JWT (Check out <a href="https://jwt.io/" target="_blank">jwt.io</a>)</p></label>
			</div>
			<div class="col-9">
				<input asp-for="JWT" class="form-control"/>
			</div>
			<span asp-validation-for="JWT" class="text-danger"></span>
		</div>

		<div class="form-group row">
			<div class="col-3">
				<label asp-for="PrivateKey"></label>
			</div>
			<div class="col-9">
				<input asp-for="PrivateKey" class="form-control"/>
			</div>
			<span asp-validation-for="PrivateKey" class="text-danger"></span>
		</div>

		<div class="form-group row">
			<div class="col-3">
				<label asp-for="PublicKey"></label>
			</div>
			<div class="col-9">
				<input asp-for="PublicKey" class="form-control"/>
			</div>
			<span asp-validation-for="PublicKey" class="text-danger"></span>
		</div>
		<div class="form-group row">
			<div class="col-3">
				<label asp-for="GetTokenPayload"></label>
			</div>
			<div class="col-9">
				<textarea asp-for="GetTokenPayload" rows="5" class="form-control"></textarea>
			</div>
			<span asp-validation-for="Kid" class="text-danger"></span>
		</div>
		<div class="form-group row">
			<div class="col-3">
				<label asp-for="AuthSettings.TokenSeparateUri"></label>
			</div>
			<div class="col-9">
				<input asp-for="AuthSettings.TokenSeparateUri" class="form-control"/>
			</div>
			<span asp-validation-for="AuthSettings.TokenSeparateUri" class="text-danger"></span>
		</div>

		

		<div class="form-group row">
			<div class="col-3 offset-3">
				<button type="submit" class="btn btn-primary form-control">Get Token</button>
			</div>
		</div>
	</form>
</div>
