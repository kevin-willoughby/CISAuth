@page
@model CIS2Auth.Pages.SeparateModel
@{
	ViewData["Title"] = "Separate Model";
}

<br />
<h2 class="text-info">CIS2 Authorisation - Separate</h2>
<br />

<h4 class="text-info">@Model.HelperText</h4>
<div class="border container" style="padding: 30px;">
	<form method="post">
		<div class="text-danger" asp-validation-summary="ModelOnly"></div>
		<div class="form-group row">
			<div class="col-3">
				<label asp-for="AuthSettings.SeparateApiKey"></label>
			</div>
			<div class="col-9">
				<input asp-for="AuthSettings.SeparateApiKey" class="form-control" />
			</div>
			<span asp-validation-for="AuthSettings.SeparateApiKey" class="text-danger"></span>
		</div>

		<div class="form-group row">
			<div class="col-3">
				<label asp-for="AuthSettings.SeparateApiSecret"></label>
			</div>
			<div class="col-9">
				<input asp-for="AuthSettings.SeparateApiSecret" class="form-control" />
			</div>
			<span asp-validation-for="AuthSettings.SeparateApiSecret" class="text-danger"></span>
		</div>
		
		<div class="form-group row">
			<div class="col-3">
				<label asp-for="AuthSettings.AuthorizationSeparateUri"></label>
			</div>
			<div class="col-9">
				<input asp-for="AuthSettings.AuthorizationSeparateUri" class="form-control" />
			</div>
			<span asp-validation-for="AuthSettings.AuthorizationSeparateUri" class="text-danger"></span>
		</div>
		
		<div class="form-group row">
			<div class="col-3">
				<label asp-for="AuthSettings.TokenSeparateUri"></label>
			</div>
			<div class="col-9">
				<input asp-for="AuthSettings.TokenSeparateUri" class="form-control" />
			</div>
			<span asp-validation-for="AuthSettings.TokenSeparateUri" class="text-danger"></span>
		</div>
		
		<div class="form-group row">
			<div class="col-3">
				<label asp-for="AuthSettings.RedirectSeparateUri"></label>
			</div>
			<div class="col-9">
				<input asp-for="AuthSettings.RedirectSeparateUri" class="form-control" />
			</div>
			<span asp-validation-for="AuthSettings.RedirectSeparateUri" class="text-danger"></span>
		</div>

		<div class="form-group row">
			<div class="col-3 offset-3">
				<button type="submit" class="btn btn-primary form-control">Authenticate</button>
			</div>
		</div>
	</form>
</div>

@section Scripts
{
	<partial name="_ValidationScriptsPartial" />
	<script type="text/javascript">
	$(function () {
		$('#MonitorDefinition_Method').change(function () {
			var value = $(this).val();
			if (value == 1) {
				$('#RequestBody').show();
			} else {
				$('#RequestBody').hide();
			}
		});
	});</script>
}